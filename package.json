{
  "name": "chainlink-hackathon",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run generate:types && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install",
    "generate:types": "npx typechain --target ethers-v5 --out-dir contracts/types contracts/abis/*.json"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.0.2",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@usedapp/core": "^0.3.10",
    "date-fns": "^2.28.0",
    "ethers": "^5.6.8",
    "framer-motion": "^6.3.4",
    "lodash": "^4.17.21",
    "next": "^12.1.5",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-hook-form": "^7.31.2",
    "zustand": "^4.0.0-rc.1"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^10.0.0",
    "@types/node": "17.0.35",
    "@types/react": "18.0.9",
    "@types/react-dom": "18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "eslint": "8.16.0",
    "eslint-config-next": "12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.2",
    "prettier": "^2.6.2",
    "typechain": "^8.0.0",
    "typescript": "4.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,md,json}": [
      "prettier --write"
    ]
  }
}
